#include <stdio.h>

int main() {
    int t1, t2, t3;
    scanf("%d %d %d", &t1, &t2, &t3);
    double rate1 = 1.0 / t1;
    double rate2 = 1.0 / t2;
    double rate3 = 1.0 / t3;
    double totalRate = rate1 + rate2 + rate3;
    double totalTime = 1.0 / totalRate;
    printf("%.2lf\n", totalTime);
    return 0;
}
